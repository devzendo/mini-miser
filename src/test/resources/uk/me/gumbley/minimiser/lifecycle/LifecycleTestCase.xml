<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-lazy-init="true">

	<!-- simple tests -->
	<bean id="lifecycleList" class="org.springframework.beans.factory.config.ListFactoryBean">
		<property name="sourceList">
			<list>
				<value>two</value>
			</list>
		</property>
	</bean>
	
	<bean id="lifecycleManager" class="uk.me.gumbley.minimiser.lifecycle.DefaultLifecycleManagerImpl">
		<constructor-arg ref="springLoader" />
		<constructor-arg ref="lifecycleList" />	
	</bean>

	<bean id="one" class="uk.me.gumbley.minimiser.lifecycle.OneLifecycle">
	</bean>
	
	<bean id="two" class="uk.me.gumbley.minimiser.lifecycle.TwoLifecycle">
		<constructor-arg ref="one" />	
	</bean>
	
	<!-- uninstantiatable beans don't get used -->
	<bean id="badLoadLifecycleList" class="org.springframework.beans.factory.config.ListFactoryBean">
		<property name="sourceList">
			<list>
				<value>nonexistant</value>
			</list>
		</property>
	</bean>
	
	<bean id="badLoadLifecycleManager" class="uk.me.gumbley.minimiser.lifecycle.DefaultLifecycleManagerImpl">
		<constructor-arg ref="springLoader" />
		<constructor-arg ref="badLoadLifecycleList" />	
	</bean>

	<!-- ordering test -->
	<bean id="orderMonitor" class="uk.me.gumbley.minimiser.util.OrderMonitor">
	</bean>

	<bean id="a" class="uk.me.gumbley.minimiser.lifecycle.NamedLifecycle">
		<constructor-arg ref="orderMonitor" />
		<constructor-arg value="a" />
	</bean>
	<bean id="b" class="uk.me.gumbley.minimiser.lifecycle.NamedLifecycle">
		<constructor-arg ref="orderMonitor" />
		<constructor-arg value="b" />
	</bean>
	<bean id="c" class="uk.me.gumbley.minimiser.lifecycle.NamedLifecycle">
		<constructor-arg ref="orderMonitor" />
		<constructor-arg value="c" />
	</bean>
	<bean id="orderingLifecycleList" class="org.springframework.beans.factory.config.ListFactoryBean">
		<property name="sourceList">
			<list>
				<value>a</value>
				<value>b</value>
				<value>c</value>
			</list>
		</property>
	</bean>
	
	<bean id="orderingLifecycleManager" class="uk.me.gumbley.minimiser.lifecycle.DefaultLifecycleManagerImpl">
		<constructor-arg ref="springLoader" />
		<constructor-arg ref="orderingLifecycleList" />	
	</bean>
	
</beans>