<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-lazy-init="true" >

	<bean id="menu" class="uk.me.gumbley.minimiser.gui.menu.StubMenu" />
	<bean id="openDatabaseList" class="uk.me.gumbley.minimiser.openlist.OpenDatabaseList" />
	<bean id="mainFrameTitle" class="uk.me.gumbley.minimiser.gui.StubMainFrameTitle" />
	<bean id="recentFilesList" class="uk.me.gumbley.minimiser.gui.menu.StubRecentFilesList" />
	
	<!-- menu wiring / adapters -->
	<bean id="menuWiringList" class="org.springframework.beans.factory.config.ListFactoryBean">
		<property name="sourceList">
			<list>
			    <value>menuDatabaseEventObserverX</value>
			<!--    <value>viewMenuInitialiserLifecycle</value>
			    <value>databaseEventListenerLifecycle</value>
				<value>databaseOpenerLifecycle</value>
				<value>databaseCloserLifecycle</value>
				<value>mainFrameGeometrySaverLifecycle</value>
				<value>delayedExecutorFlushLifecycle</value> -->
			</list>
		</property>
	</bean>
	
	<bean id="menuDatabaseEventObserverX" class="uk.me.gumbley.minimiser.wiring.menu.MenuDatabaseEventObserver">
		<constructor-arg ref="menu" />
		<constructor-arg ref="openDatabaseList" />
		<constructor-arg ref="mainFrameTitle" />
		<constructor-arg ref="recentFilesList" />
	</bean>
	
</beans>
