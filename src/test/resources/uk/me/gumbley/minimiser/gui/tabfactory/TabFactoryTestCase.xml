<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="databaseDescriptor" class="uk.me.gumbley.minimiser.openlist.DatabaseDescriptorFactory" />
	
	<bean id="openTabList" class="uk.me.gumbley.minimiser.opentablist.OpenTabList" />

	<bean id="problemReporter" class="uk.me.gumbley.minimiser.gui.dialog.problem.StubProblemReporter" />

	<bean id="tabFactory" class="uk.me.gumbley.minimiser.gui.tabfactory.DefaultTabFactoryImpl">
		<constructor-arg ref="springLoader" />
		<constructor-arg ref="openTabList" />
		<constructor-arg ref="problemReporter" />
	</bean>

	<bean id="tabOVERVIEW" scope="prototype" class="uk.me.gumbley.minimiser.gui.tabfactory.StubRecordingTab" >
		<constructor-arg ref="databaseDescriptor" />
	</bean>
	<bean id="tabSQL" scope="prototype" class="uk.me.gumbley.minimiser.gui.tabfactory.StubRecordingTab" >
		<constructor-arg ref="databaseDescriptor" />
	</bean>
	
</beans>