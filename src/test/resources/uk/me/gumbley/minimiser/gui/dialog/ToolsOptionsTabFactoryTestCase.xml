<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="changeCollectingPrefs" class="uk.me.gumbley.minimiser.prefs.ChangeCollectingPrefsFactory" />
	
	<bean id="problemReporter" class="uk.me.gumbley.minimiser.gui.dialog.StubProblemReporter" />

	<bean id="toolsOptionsTabList" class="org.springframework.beans.factory.config.ListFactoryBean">
		<property name="sourceList">
			<list>
				<value>stub</value>
			</list>
		</property>
	</bean>

	<bean id="toolsOptionsTabFactory" class="uk.me.gumbley.minimiser.gui.dialog.DefaultToolsOptionsTabFactoryImpl">
		<constructor-arg ref="springLoader" />
		<constructor-arg ref="problemReporter" />
		<constructor-arg ref="toolsOptionsTabList" />	
	</bean>

	<bean id="stub" scope="prototype" class="uk.me.gumbley.minimiser.gui.dialog.StubRecordingToolsOptionsTab" >
		<constructor-arg ref="changeCollectingPrefs" />
	</bean>

</beans>