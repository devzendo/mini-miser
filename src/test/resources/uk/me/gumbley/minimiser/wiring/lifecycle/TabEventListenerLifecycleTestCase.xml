<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-lazy-init="true">

	<!-- lifecycle -->
	<bean id="lifecycleList" class="org.springframework.beans.factory.config.ListFactoryBean">
		<property name="sourceList">
			<list>
				<value>tabEventListenerLifecycle</value>
			</list>
		</property>
	</bean>
	
	<bean id="lifecycleManager" class="uk.me.gumbley.minimiser.lifecycle.DefaultLifecycleManagerImpl">
		<constructor-arg ref="springLoader" />
		<constructor-arg ref="lifecycleList" />	
	</bean>

	<bean id="tabEventListenerLifecycle" class="uk.me.gumbley.minimiser.wiring.lifecycle.TabEventListenerLifecycle">
		<constructor-arg ref="listenerManager" />
	</bean>

	<!-- listener manager -->	
	<bean id="listenerList" class="org.springframework.beans.factory.config.ListFactoryBean">
		<property name="sourceList">
			<list>
				<value>namedListener</value>
			</list>
		</property>
	</bean>
	
	<bean id="listenerManager" class="uk.me.gumbley.minimiser.opentablist.TabEventListenerManager">
		<constructor-arg ref="springLoader" />
		<constructor-arg ref="openTabList" />
		<constructor-arg ref="listenerList" />	
	</bean>

	<bean id="namedListener" class="uk.me.gumbley.minimiser.util.NamedListener">
		<constructor-arg ref="orderMonitor" />
		<constructor-arg value="dave" />
	</bean>
	
	<bean id="orderMonitor" class="uk.me.gumbley.minimiser.util.OrderMonitor" />

	<bean id="openTabList" class="uk.me.gumbley.minimiser.opentablist.OpenTabList" />

</beans>