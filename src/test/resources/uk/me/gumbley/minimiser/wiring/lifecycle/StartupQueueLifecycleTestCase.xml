<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-lazy-init="true">

	<!-- lifecycle -->
	<bean id="lifecycleList" class="org.springframework.beans.factory.config.ListFactoryBean">
		<property name="sourceList">
			<list>
				<value>startupQueueLifecycle</value>
			</list>
		</property>
	</bean>
	
	<bean id="lifecycleManager" class="uk.me.gumbley.minimiser.lifecycle.DefaultLifecycleManagerImpl">
		<constructor-arg ref="springLoader" />
		<constructor-arg ref="lifecycleList" />	
	</bean>

	<bean id="startupQueueLifecycle" class="uk.me.gumbley.minimiser.wiring.lifecycle.StartupQueueLifecycle">
		<constructor-arg ref="startupQueue" />
	</bean>

	<bean id="startupQueue" class="uk.me.gumbley.minimiser.startupqueue.StartupQueue" />
	
</beans>