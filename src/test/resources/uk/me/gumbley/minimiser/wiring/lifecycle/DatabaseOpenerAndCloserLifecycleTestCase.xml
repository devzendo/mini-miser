<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-lazy-init="true">

	<!-- the close test -->
	<bean id="closeLifecycleList" class="org.springframework.beans.factory.config.ListFactoryBean">
		<property name="sourceList">
			<list>
				<value>databaseCloserLifecycle</value>
			</list>
		</property>
	</bean>
	
	<bean id="closeLifecycleManager" class="uk.me.gumbley.minimiser.lifecycle.DefaultLifecycleManagerImpl">
		<constructor-arg ref="springLoader" />
		<constructor-arg ref="closeLifecycleList" />
	</bean>

	<bean id="databaseCloserLifecycle" class="uk.me.gumbley.minimiser.wiring.lifecycle.DatabaseCloserLifecycle">
		<constructor-arg ref="openDatabaseList" />	
		<constructor-arg ref="prefs" />	
	</bean>

	<!-- the open test -->
	<bean id="openLifecycleList" class="org.springframework.beans.factory.config.ListFactoryBean">
		<property name="sourceList">
			<list>
				<value>databaseOpenerLifecycle</value>
			</list>
		</property>
	</bean>
	
	<bean id="openLifecycleManager" class="uk.me.gumbley.minimiser.lifecycle.DefaultLifecycleManagerImpl">
		<constructor-arg ref="springLoader" />
		<constructor-arg ref="openLifecycleList" />
	</bean>

	<bean id="databaseOpenerLifecycle" class="uk.me.gumbley.minimiser.wiring.lifecycle.DatabaseOpenerLifecycle">
		<constructor-arg ref="opener" />	
		<constructor-arg ref="openerAdapterFactory" />	
		<constructor-arg ref="openDatabaseList" />	
		<constructor-arg ref="prefs" />	
	</bean>
	
	<!-- resources shared between tests -->
	<bean id="openDatabaseList" class="uk.me.gumbley.minimiser.openlist.OpenDatabaseList" />

	<bean id="accessFactory" class="uk.me.gumbley.minimiser.persistence.impl.JdbcTemplateAccessFactoryImpl" >
		<constructor-arg ref="pluginManager" />
	</bean>
	
	<bean id="prefs" class="uk.me.gumbley.minimiser.wiring.lifecycle.StubOpenListPrefs" />

	<bean id="opener" class="uk.me.gumbley.minimiser.opener.DefaultOpenerImpl">
		<constructor-arg ref="accessFactory" />
		<constructor-arg ref="migrator" />
	</bean>

	<bean id="migrator" class="uk.me.gumbley.minimiser.migrator.DefaultMigrator">
		<constructor-arg ref="pluginManager" />
	</bean>
	
	<bean id="openerAdapterFactory" class="uk.me.gumbley.minimiser.gui.menu.StubOpenerAdapterFactory" />
	
</beans>