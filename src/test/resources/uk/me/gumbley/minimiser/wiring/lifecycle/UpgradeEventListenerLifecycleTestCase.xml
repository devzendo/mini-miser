<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-lazy-init="true">

	<!-- lifecycle -->
	<bean id="lifecycleList" class="org.springframework.beans.factory.config.ListFactoryBean">
		<property name="sourceList">
			<list>
				<value>upgradeEventListenerLifecycle</value>
			</list>
		</property>
	</bean>
	
	<bean id="lifecycleManager" class="uk.me.gumbley.minimiser.lifecycle.DefaultLifecycleManagerImpl">
		<constructor-arg ref="springLoader" />
		<constructor-arg ref="lifecycleList" />	
	</bean>

	<bean id="upgradeEventListenerLifecycle" class="uk.me.gumbley.minimiser.wiring.lifecycle.UpgradeEventListenerLifecycle">
		<constructor-arg ref="listenerManager" />
		<constructor-arg ref="appDetails" />
	</bean>

	<bean id="appDetails" class="uk.me.gumbley.minimiser.pluginmanager.AppDetails" />

	<!-- listener manager -->	
	<bean id="listenerList" class="org.springframework.beans.factory.config.ListFactoryBean">
		<property name="sourceList">
			<list>
				<value>stub</value>
				<value>prefsInitialisingFreshInstallListener</value>
			</list>
		</property>
	</bean>
	
	<bean id="stub" class="uk.me.gumbley.minimiser.upgradedetector.StubRecordingUpgradeListener" />

	<bean id="prefsInitialisingFreshInstallListener" class="uk.me.gumbley.minimiser.upgradedetector.PrefsInitialisingFreshInstallListener">
		<constructor-arg ref="prefs" />
	</bean>

	<bean id="upgradeDetector" class="uk.me.gumbley.minimiser.upgradedetector.UpgradeDetector">
		<constructor-arg ref="prefs" />
	</bean>
	
	<bean id="prefs" class="uk.me.gumbley.minimiser.prefs.PrefsFactory" />

	<bean id="listenerManager" class="uk.me.gumbley.minimiser.upgradedetector.UpgradeEventListenerManager">
		<constructor-arg ref="springLoader" />
		<constructor-arg ref="upgradeDetector" />
		<constructor-arg ref="listenerList" />	
	</bean>

</beans>