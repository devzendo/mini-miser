<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-lazy-init="true">

	<!-- lifecycle -->
	<bean id="lifecycleList" class="org.springframework.beans.factory.config.ListFactoryBean">
		<property name="sourceList">
			<list>
				<value>statusBarAdapterLifecycle</value>
			</list>
		</property>
	</bean>
	
	<bean id="lifecycleManager" class="uk.me.gumbley.minimiser.lifecycle.DefaultLifecycleManagerImpl">
		<constructor-arg ref="springLoader" />
		<constructor-arg ref="lifecycleList" />	
	</bean>

	<bean id="statusBarAdapterLifecycle" class="uk.me.gumbley.minimiser.wiring.lifecycle.StatusBarAdapterLifecycle">
		<constructor-arg ref="statusBarMessageQueueAdapter" />
	</bean>

	<bean id="statusBarMessageQueueAdapter" class="uk.me.gumbley.minimiser.gui.StatusBarMessageQueueAdapter">
		<constructor-arg ref="statusBar" />
		<constructor-arg ref="messageQueue" />
	</bean>

	<bean id="statusBar" class="uk.me.gumbley.minimiser.gui.HeadlessStatusBar">
		<constructor-arg ref="delayedExecutor" />
	</bean>
	
	<bean id="delayedExecutor" class="uk.me.gumbley.minimiser.util.DelayedExecutor" />

	<bean id="messageQueue" class="uk.me.gumbley.minimiser.messagequeue.MessageQueue">
		<constructor-arg ref="prefs" />
	</bean>

	<bean id="prefs" class="uk.me.gumbley.minimiser.prefs.PrefsFactory" />

</beans>