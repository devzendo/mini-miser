<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="testConfig" class="uk.me.gumbley.minimiser.config.TestConfig">
	</bean>
	
	<bean id="jdbcAccess" class="uk.me.gumbley.minimiser.persistence.impl.JdbcAccessImpl">
		<constructor-arg ref="springLoader" />
	</bean>
	
	<bean id="hibernateAccess" class="uk.me.gumbley.minimiser.persistence.impl.HibernateAccessImpl" />
	
	<!-- Half statically defined here, but the URL and password are dynamic -->
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.SingleConnectionDataSource"
		lazy-init="true">
		<property name="driverClassName"
		    value="org.h2.Driver" />
		<property name="username"
		    value="sa" />
	</bean>
	</beans>