<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-lazy-init="true"
	>

	<!-- persistence layer -->
	<bean id="accessFactory" class="uk.me.gumbley.minimiser.persistence.impl.JdbcTemplateAccessFactoryImpl" />

	<!-- gui layer -->
	<bean id="mainFrame" class="uk.me.gumbley.minimiser.gui.MainFrameFactory" lazy-init="true" />

	<bean id="menuWiring" class="uk.me.gumbley.minimiser.gui.menu.MenuWiring" lazy-init="true" />
	
	<bean id="cursorManager" class="uk.me.gumbley.minimiser.gui.CursorManager" lazy-init="true" />

	<bean id="windowGeometryStore" class="uk.me.gumbley.minimiser.gui.WindowGeometryStore" lazy-init="true" >
		<constructor-arg ref="prefs" />
	</bean>

	<bean id="opener" class="uk.me.gumbley.minimiser.opener.DefaultOpenerImpl" lazy-init="true" >
		<constructor-arg ref="accessFactory" />
	</bean>
	
	<bean id="openerAdapterFactory" class="uk.me.gumbley.minimiser.opener.DefaultOpenerAdapterFactoryImpl" lazy-init="true" >
		<constructor-arg ref="mainFrame" />	
		<constructor-arg ref="cursorManager" />
		<constructor-arg ref="statusBar" />
	</bean>
	
	<bean id="statusBar" class="uk.me.gumbley.minimiser.gui.MainFrameStatusBar" lazy-init="true" >
        <constructor-arg ref="delayedExecutor" />
    </bean>
    
	<bean id="menu" class="uk.me.gumbley.minimiser.gui.menu.MenuImpl" lazy-init="true" >
		<constructor-arg ref="menuWiring" />
	</bean>

	<bean id="menuBuilder" class="uk.me.gumbley.minimiser.gui.menu.MenuBuilder" lazy-init="true" >
		<constructor-arg ref="menuWiring" />
		<constructor-arg ref="springLoader" />
	</bean>

	<bean id="menuMediator" class="uk.me.gumbley.minimiser.gui.menu.MenuMediatorImpl" lazy-init="true" >
		<constructor-arg ref="menu" />
		<constructor-arg ref="openDatabaseList" />
		<constructor-arg ref="recentFilesList" />
		<constructor-arg ref="opener" />
		<constructor-arg ref="openerAdapterFactory" />
	</bean>
	
    <!-- menu action listeners -->
	<bean id="menuALFileNew" class="uk.me.gumbley.minimiser.gui.menu.actionlisteners.FileNewActionListener" lazy-init="true" >
		<constructor-arg ref="openDatabaseList" />
		<constructor-arg ref="accessFactory" />
		<constructor-arg ref="cursorManager" />
	</bean>
	<bean id="menuALFileOpen" class="uk.me.gumbley.minimiser.gui.menu.actionlisteners.FileOpenActionListener" lazy-init="true" >
		<constructor-arg ref="openDatabaseList" />
		<constructor-arg ref="cursorManager" />
		<constructor-arg ref="opener" />
	</bean>
	<bean id="menuALFileClose" class="uk.me.gumbley.minimiser.gui.menu.actionlisteners.FileCloseActionListener" lazy-init="true" >
		<constructor-arg ref="openDatabaseList" />
		<constructor-arg ref="cursorManager" />
	</bean>
	<bean id="menuALFileCloseAll" class="uk.me.gumbley.minimiser.gui.menu.actionlisteners.FileCloseAllActionListener" lazy-init="true" >
		<constructor-arg ref="openDatabaseList" />
		<constructor-arg ref="cursorManager" />
	</bean>


	<bean id="menuALHelpAbout" class="uk.me.gumbley.minimiser.gui.menu.actionlisteners.HelpAboutActionListener" lazy-init="true" >
		<constructor-arg ref="mainFrame" />	
		<constructor-arg ref="cursorManager" />
	</bean>
    
    <!-- lifecycle management -->
    <bean id="lifecycleList" class="org.springframework.beans.factory.config.ListFactoryBean">
		<property name="sourceList">
			<list>
				<value>databaseOpenerLifecycle</value>
				<value>databaseCloserLifecycle</value>
				<value>mainFrameGeometrySaverLifecycle</value>
				<value>delayedExecutorFlushLifecycle</value>
			</list>
		</property>
	</bean>
	
	<bean id="lifecycleManager" class="uk.me.gumbley.minimiser.lifecycle.DefaultLifecycleManagerImpl">
		<constructor-arg ref="springLoader" />
		<constructor-arg ref="lifecycleList" />	
	</bean>

	<bean id="delayedExecutorFlushLifecycle" class="uk.me.gumbley.minimiser.gui.lifecycle.DelayedExecutorFlushLifecycle">
		<constructor-arg ref="delayedExecutor" />	
	</bean>
	
	<bean id="databaseCloserLifecycle" class="uk.me.gumbley.minimiser.gui.lifecycle.DatabaseCloserLifecycle">
		<constructor-arg ref="openDatabaseList" />	
		<constructor-arg ref="prefs" />	
	</bean>

	<bean id="databaseOpenerLifecycle" class="uk.me.gumbley.minimiser.gui.lifecycle.DatabaseOpenerLifecycle">
		<constructor-arg ref="opener" />	
		<constructor-arg ref="openerAdapterFactory" />	
		<constructor-arg ref="openDatabaseList" />	
		<constructor-arg ref="prefs" />	
	</bean>

	<bean id="mainFrameGeometrySaverLifecycle" class="uk.me.gumbley.minimiser.gui.lifecycle.MainFrameGeometrySaverLifecycle">
		<constructor-arg ref="windowGeometryStore" />	
		<constructor-arg ref="mainFrame" />
	</bean>
	
	<!-- models, other singletons and utilities -->
	<bean id="openDatabaseList" class="uk.me.gumbley.minimiser.openlist.OpenDatabaseList" lazy-init="true" />

	<bean id="recentFilesList" class="uk.me.gumbley.minimiser.recentlist.DefaultRecentFilesListImpl" lazy-init="true">
		<constructor-arg ref="prefs" />
	</bean>

	<bean id="prefsLocation" class="uk.me.gumbley.minimiser.prefs.PrefsLocation" lazy-init="true" />

	<bean id="prefs" class="uk.me.gumbley.minimiser.prefs.PrefsFactory" lazy-init="true" />

	<bean id="delayedExecutor" class="uk.me.gumbley.minimiser.util.DelayedExecutor" lazy-init="true" />

	<bean id="workerPool" class="uk.me.gumbley.minimiser.util.WorkerPool" lazy-init="true" />
</beans>
