<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- persistence layer -->
	<bean id="accessFactory" class="uk.me.gumbley.minimiser.persistence.impl.JdbcTemplateJdbcAccessImpl">
		<constructor-arg ref="springLoader" />
	</bean>

	<!-- Half statically defined here, but the URL and password are dynamic -->
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.SingleConnectionDataSource"
		lazy-init="true"
		scope="prototype">
		<property name="driverClassName"
		    value="org.h2.Driver" />
		<property name="username"
		    value="sa" />
	</bean>
	
	<!-- gui layer -->
	<bean id="menuWiring" class="uk.me.gumbley.minimiser.gui.mm.MenuWiring" lazy-init="true" />
	
	<bean id="menu" class="uk.me.gumbley.minimiser.gui.mm.MenuImpl" lazy-init="true" >
		<constructor-arg ref="menuWiring" />
	</bean>

	<bean id="menuBuilder" class="uk.me.gumbley.minimiser.gui.mm.MenuBuilder" lazy-init="true" >
		<constructor-arg ref="menuWiring" />
		<constructor-arg ref="springLoader" />
	</bean>

	<bean id="menuMediator" class="uk.me.gumbley.minimiser.gui.mm.MenuMediatorImpl" lazy-init="true" >
		<constructor-arg ref="menu" />
		<constructor-arg ref="openDatabaseList" />
	</bean>
	
    <!-- menu action listeners -->
	<bean id="menuALFileNew" class="uk.me.gumbley.minimiser.gui.mm.al.FileNewActionListener" lazy-init="true" >
		<constructor-arg ref="workerPool" />
		<constructor-arg ref="openDatabaseList" />
		<constructor-arg ref="accessFactory" />
	</bean>
    
	<!-- models, other singletons and utilities -->
	<bean id="openDatabaseList" class="uk.me.gumbley.minimiser.gui.odl.OpenDatabaseList" lazy-init="true" />
	<bean id="prefsLocation" class="uk.me.gumbley.minimiser.prefs.PrefsLocation" lazy-init="true" />
	<bean id="prefs" class="uk.me.gumbley.minimiser.prefs.PrefsFactory" lazy-init="true" />
	<bean id="delayedExecutor" class="uk.me.gumbley.minimiser.util.DelayedExecutor" lazy-init="true" />
	<bean id="workerPool" class="uk.me.gumbley.minimiser.util.WorkerPool" lazy-init="true" />
	
</beans>
